<Window x:Class="Raspisanie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Raspisanie"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="RaspisanieGrid" AutoGenerateColumns="False" Margin=" 0 20 0 0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Группа" Width="100" Binding="{Binding Path=id_group_child}"/>
                <DataGridTextColumn Header="Занятие" Width="100" Binding="{Binding Path=NameLessions}"/>
                <DataGridTextColumn Header="№ Кабинета" Width="100" Binding="{Binding Path=numder_classroom}"/>
                <DataGridTextColumn Header="Дата-время" Width="100" Binding="{Binding Path=date_time_child}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Menu Height="20" VerticalAlignment="Top">

            <MenuItem Header="Группы">
                <MenuItem Header="Добавить ребенка" x:Name="AddChild" Click="AddChild_Click"/>
                <MenuItem Header="Добавить группу" x:Name="AddGroup" Click="AddGroup_Click"/>
                <MenuItem Header="Сформировать группу" x:Name="FormAGroup" Click="FormAGroup_Click"/>
                <MenuItem Header="Удалить ребенка" x:Name="DeleteChild" Click="DeleteChild_Click"/>
                <MenuItem Header="Удалить Группу" x:Name="DeleteGroup" Click="DeleteGroup_Click"/>
                <MenuItem Header="Расформировать группу" x:Name="DisbandGroup" Click="DisbandGroup_Click"/>
            </MenuItem>

            <MenuItem Header="Преподаватели">
                <MenuItem Header="Добавить преподавателя" x:Name="AddTeacher" Click="AddTeacher_Click"/>
                <MenuItem Header="Добавить предмет" x:Name="AddLession" Click="AddLession_Click"/>
                <MenuItem Header="Удалить преподавателя" x:Name="DeleteTeacher" Click="DeleteTeacher_Click"/>
                <MenuItem Header="Удалить предмет" x:Name="DeleteLession" Click="DeleteLession_Click"/>
            </MenuItem>

            <MenuItem Header="Расписание">
                <MenuItem Header="Добавить запись" x:Name="AddRecord" Click="AddRecord_Click"/>
                <MenuItem Header="Убрать запись" x:Name="DeleteRecord" Click="DeleteRecord_Click"/>
            </MenuItem>
        </Menu>













